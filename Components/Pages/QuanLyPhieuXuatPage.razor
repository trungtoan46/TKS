                chiTietErrorMessage = "Đơn giá phải lớn hơn 0";
                return;
            }

            // Kiểm tra sản phẩm đã tồn tại
            var exists = await XuatKhoRawService.ExistsByProductAsync(selectedPhieuForChiTiet!.ID, sanPhamId);
            if (exists)
            {
                chiTietErrorMessage = "Sản phẩm này đã có trong phiếu xuất";
                return;
            }

            var chiTiet = new XuatKhoRaw
            {
                Xuat_Kho_ID = selectedPhieuForChiTiet!.ID,
                San_Pham_ID = sanPhamId,
                SL_Xuat = soLuongXuat,
                Don_Gia_Xuat = donGiaXuat
